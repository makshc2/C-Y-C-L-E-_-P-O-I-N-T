{
  "name": "app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open --port 5173",
    "dev:host": "vite --open --host --port 5173",
    "dev:https": "vite --open --https --host --port 5173 --cert .cert/localhost.pem --key .cert/localhost-key.pem",

    "typecheck": "vue-tsc --noEmit",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 4173",

    "quasar:icons": "echo '(@quasar/extras підключений, окремий крок не потрібен)'"
  },
  "dependencies": {
    "@quasar/extras": "^1.17.0",
    "@quasar/vite-plugin": "^1.10.0",
    "quasar": "^2.18.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "sass-embedded": "^1.92.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vue-tsc": "^3.0.5"
  }
}
