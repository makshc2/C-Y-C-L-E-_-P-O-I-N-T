{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "types": ["vite/client", "quasar"]
  },
  "include": [
    "src/**/*", "env.d.ts"],
  "exclude": [
    "app/node_modules", "dist"]
}
