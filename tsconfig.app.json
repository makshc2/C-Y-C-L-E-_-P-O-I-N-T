{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "types": ["vite/client", "quasar", "web-bluetooth"]
  },
  "include": [
    "src/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "app/node_modules",
    "dist"
  ]
}